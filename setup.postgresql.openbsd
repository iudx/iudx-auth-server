#!/bin/sh

cd /var/postgresql

initdb -D /var/postgresql/data/ -U postgres --auth=md5 --encoding=UTF-8 --pwfile=postgresql.db.password
pg_ctl -D /var/postgresql/data/ -l logfile start

export PGPASSWORD=`cat postgresql.db.password`

psql -U postgres < postgresql.sql >/dev/null

rm -rf postgresql.db.password
rm -rf postgresql.sql
